<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f5f5f5">

    <EditText
        android:layout_marginTop="20dp"
        android:hint="Digite seu nome"
        android:inputType="text"
        android:id="@+id/activity_register_edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:hint="Digite seu E-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_edtemail"/>
    <EditText
        android:layout_marginTop="15dp"
        android:hint="Digite uma senha"
        android:inputType="textPassword"
        android:id="@+id/activity_register_edtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="15dp"
        android:hint="Confirme a senha"
        android:inputType="textPassword"
        android:id="@+id/activity_register_edtconfirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:text="Registrar"
        android:id="@+id/activity_registar_btnregister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="@color/color_btn_secundario"
        android:background="@color/color_btn_principal"
        android:textStyle="bold"/>
    <Button
        android:layout_marginTop="15dp"
        android:text="Cancelar"
        android:id="@+id/activity_registar_btnrcancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_btn_secundario"
        android:textColor="@color/color_btn_principal"
        android:textStyle="bold"/>

</LinearLayout>